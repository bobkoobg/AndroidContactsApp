<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                android:paddingBottom="@dimen/activity_vertical_margin"
                tools:context="sk.stavona.contacts2.ShowDetails"
                android:background="#ff2aa706">

    <View
        android:layout_width="fill_parent"
        android:layout_height="5dp"
        android:background="@android:color/darker_gray"
        android:id="@+id/ViewLineSeparator"
        android:layout_below="@+id/textViewContactInfo"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"/>

    <View
        android:layout_width="5dp"
        android:layout_height="fill_parent"
        android:background="@android:color/darker_gray"
        android:id="@+id/ViewLineSeparator2"
        android:layout_alignTop="@+id/ViewLineSeparator"
        android:layout_toLeftOf="@+id/scrollView2"
        android:layout_toStartOf="@+id/scrollView2"/>

    <ScrollView

        android:layout_width="175dp"
        android:layout_height="420dp"
        android:id="@+id/scrollView"
        android:fillViewport="false"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/ViewLineSeparator"
        android:layout_alignBottom="@+id/ViewLineSeparator2"
        android:layout_toStartOf="@+id/ViewLineSeparator2"
        android:layout_toLeftOf="@+id/ViewLineSeparator2"
        android:background="#ff62d432">

        <TextView
            android:id="@+id/textViewCallLogOfParticularContact"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true" />
    </ScrollView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/NameOfParticularID"
        android:id="@+id/textViewContactInfo"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"/>

    <ScrollView
        android:layout_width="175dp"
        android:layout_height="420dp"
        android:id="@+id/scrollView2"
        android:fillViewport="false"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/ViewLineSeparator"
        android:layout_alignBottom="@+id/ViewLineSeparator2"
        android:background="#ff62d432">

        <TextView
            android:id="@+id/textViewSmsLog"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"/>
    </ScrollView>

</RelativeLayout>
